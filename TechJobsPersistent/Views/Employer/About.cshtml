@model List<TechJobsPersistent.Models.Employer>

@if (Model.Count == 0)
{
    <h1>No employers found.</h1>
}
else
{
    @foreach (var employer in Model)
    {
        <h1>Employer: @employer.Name</h1>

        <div>
            <p>Name: @employer.Name</p>
            <p>Location: @employer.Location</p>
        </div>
    }
}

